#!/usr/bin/env bash
# Managed by standard-tooling â€” DO NOT EDIT in downstream repos.
# Canonical source: https://github.com/wphillipmoore/standard-tooling
set -euo pipefail

# Find commit-message validator: prefer PATH, fall back to relative location.
if command -v commit-message >/dev/null 2>&1; then
  commit-message "$1"
else
  hook_dir="$(cd "$(dirname "$0")" && pwd)"
  "$hook_dir/../../bin/commit-message" "$1"
fi
